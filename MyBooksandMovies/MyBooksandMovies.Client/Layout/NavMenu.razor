 @inject IJSRuntime JS
 
 <div class="d-flex justify-content-between align-items-center">
    <div>
        <a class="d-flex align-items-center gap-2 text-decoration-none SiteTitle" href="/"><i class="bi bi-book fs-3 align-center"></i><h1 class="d-inline-block mx-2">Book wishlist</h1></a>
    </div>
    
    <div class="hamburger-wrapper">
  <button class="navbar-toggler" id="burgernav" onclick="toggleMenu()">
    <i class="bi bi-list fs-2 hamburgernav"></i>
  </button>
</div>

</div>



<div id="navMenu" class="nav-scrollable">
    <nav >
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="" aria-hidden="true"></span> <i class="bi bi-search"></i> Search
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Wishlist">
                <span aria-hidden="true"></span><i class="bi bi-heart-fill"></i> Wishlist
            </NavLink>
        </div>

        </nav>
</div>




@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("setupNavMenuClose");
        }
    }
}